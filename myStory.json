                {
                    "Text": "Bus to Capitola",
                    "Target": "Capitola"
                },
                {
                    "Text": "Bus to San Jose",
                    "Target": "San Jose"
                },
                {
                    "Text": "Bus to campus",
                    "Target": "Dorm (fail)"
                }
            ]
        },
        "Capitola": {
            "Body": "Just a day out is good enough.",
            "Choices": [
                {
                    "Text": "Back to the dorm",
